@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@{
    ViewData["Title"] = "Home Page";
    string id = @User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "Null";
    string name = @User.FindFirst(ClaimTypes.Name)?.Value ?? "Null";
    string role = @User.FindFirst(ClaimTypes.Role)?.Value ?? "Null";
}
@if (role!=null)
{
    
    <div class="text-center">
        <h1 class="display-4">User</h1>
        <br>
        <span>
            Id : @id<br/>Name : @name,<br/> Role : @role
        </span>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Guest</h1>
    </div>
}
