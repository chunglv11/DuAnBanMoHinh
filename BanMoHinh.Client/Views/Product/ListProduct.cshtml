                                    <ul>
                                        @foreach (var item in productMaterial)
                                        {
                                            <li class="even">
                                                <label>
                                                    <input type="checkbox" name="SelectedMaterial" value="@item.Value" @(selectedMaterialIds != null && selectedMaterialIds.Select(x => x.ToString()).Contains(item.Value) ? "checked='checked'" : "")>
