@model BanMoHinh.Share.ViewModels.ProductDetailVM
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Shared/_LayoutAdmin.cshtml";
    List<string> imageExtensions = new List<string>()
    {
        ".png", ".jpg", ".jpeg", ".gif", ".tiff", ".pdf",".webp"
    };

}

<div style="display:flex; align-items: center;">
    <div style="width:60%">
        <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SizeId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SizeId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ColorId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ColorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PriceSale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PriceSale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Create_At)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Create_At)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Update_At)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Update_At)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.filecollection)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.filecollection)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
    </div>
    <div style="width:40%">
        <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false">
            <div class="carousel-inner">              
                @for (int i = 0; i < Model.Images.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                                    <img src="https://localhost:7007/@Model.Images[i]" class="d-block w-75" alt="..." >
                                </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                                    <img src="https://localhost:7007/@Model.Images[i]" class="d-block w-75" alt="...">
                                </div>
                    }
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Sửa", "Update", new {  id = Model.Id  }) |
    <a asp-action="Show">Quay lại</a>
</div>
