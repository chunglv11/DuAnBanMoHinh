@model IEnumerable<BanMoHinh.Share.Models.ProductDetail>

@{
    ViewData["Title"] = "Show";
    Layout = "~/Areas/Admin/Shared/_LayoutAdmin.cshtml";
}

<h1>Show</h1>

<p>
