@model IEnumerable<BanMoHinh.Share.Models.Colors>

@{
    ViewData["Title"] = "Bảng màu sắc";
    Layout = "~/Areas/Admin/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách màu</h1>
<p>
    <a asp-action="Create"  class="btn btn-add btn-sm"> <i class="fas fa-plus"></i>Thêm mới màu</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
               Tên màu
            </th>
            <th>
                Mã màu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ColorCode)
            </td>
            <td>
                <a class="btn btn-primary btn-sm edit" type="button" href="Update/@item.ColorId" title="Sửa"><i class="fa fa-edit"></i></a>
                <a class="btn btn-primary btn-sm trash" type="button" href="Remove/@item.ColorId" title="Xóa"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
