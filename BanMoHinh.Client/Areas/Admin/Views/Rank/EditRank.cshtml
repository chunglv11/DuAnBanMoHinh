@model BanMoHinh.Share.Models.Rank

@{
    ViewData["Title"] = "EditRank";
    Layout = "~/Areas/Admin/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRank">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointsMin" class="control-label"></label>
                <input asp-for="PointsMin" class="form-control" />
                <span asp-validation-for="PointsMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoinsMax" class="control-label"></label>
                <input asp-for="PoinsMax" class="form-control" />
                <span asp-validation-for="PoinsMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
