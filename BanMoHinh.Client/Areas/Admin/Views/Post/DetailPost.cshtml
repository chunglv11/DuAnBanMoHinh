@model BanMoHinh.Share.Models.Post

@{
    ViewData["Title"] = "DetailPost";
    Layout = "~/Areas/Admin/Shared/_LayoutAdmin.cshtml";
}

<div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
          <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
          <li class="breadcrumb-item active"><a asp-action="Index">Danh sách bài viết</a></li>
          <li class="breadcrumb-item active"><a asp-action="DetailPost">Chi tiết sản phẩm</a></li>
        </ul>    
</div>

<div>
    <dl class="row">

        <dt class = "col-sm-2">
            Người đăng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            Tiêu đề
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tittle)
        </dd>
        <dt class = "col-sm-2">
            Ảnh đại diện
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TittleImage)
        </dd>
        <dt class = "col-sm-2">
            Ngày đăng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateAt)
        </dd>
        <dt class = "col-sm-2">
            Ngày cập nhật
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdateAt)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <br/>
    <hr/>
    <br />
    @Html.Raw(Model.Contents)
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">Trở lại</a>
</div>
